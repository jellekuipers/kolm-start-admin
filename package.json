{
  "name": "kolm-start-admin",
  "description": "A TanStack Start + better-auth admin starter, with Drizzle ORM, tRPC, React Aria.",
  "author": "Jelle Kuipers <info@jellekuipers.com> (https://jellekuipers.com)",
  "version": "1.0.1",
  "type": "module",
  "keywords": [
    "better-auth",
    "biomejs",
    "drizzle-orm",
    "tanstack-start",
    "tRPC",
    "typescript"
  ],
  "scripts": {
    "build": "vite build && tsc --noEmit",
    "check": "npx @biomejs/biome check --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:reset": "tsx app/db/reset.ts ",
    "db:seed:dev": "tsx app/db/seed.dev.ts ",
    "db:seed": "tsx src/db/seed.ts ",
    "db:studio": "drizzle-kit studio",
    "dev": "vite dev",
    "format": "npx @biomejs/biome format --write .",
    "lint": "npx @biomejs/biome lint --write .",
    "postinstall": "drizzle-kit push",
    "start": "node --env-file=.env .output/server/index.mjs",
    "typecheck": "tsc --noEmit "
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "@tanstack/match-sorter-utils": "^8.19.4",
    "@tanstack/react-form": "^1.14.2",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-query-devtools": "^5.83.0",
    "@tanstack/react-router": "^1.129.8",
    "@tanstack/react-router-with-query": "^1.129.8",
    "@tanstack/react-start": "^1.129.8",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/router-devtools": "^1.129.8",
    "@trpc/client": "^11.4.3",
    "@trpc/server": "^11.4.3",
    "@trpc/tanstack-react-query": "^11.4.3",
    "better-auth": "^1.3.3",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.3",
    "drizzle-seed": "^0.3.1",
    "pg": "^8.16.3",
    "react": "^19.1.0",
    "react-aria-components": "^1.11.0",
    "react-dom": "^19.1.0",
    "slugify": "^1.6.6",
    "superjson": "^2.2.2",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@faker-js/faker": "^9.9.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.15.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "drizzle-kit": "^0.31.4",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss-react-aria-components": "^2.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
