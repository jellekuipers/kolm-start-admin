{
  "name": "kolm-start-admin",
  "description": "A TanStack Start + better-auth admin starter, with Drizzle ORM, tRPC, React Aria.",
  "author": "Jelle Kuipers <info@jellekuipers.com> (https://jellekuipers.com)",
  "version": "1.0.0",
  "type": "module",
  "keywords": [
    "better-auth",
    "biomejs",
    "drizzle-orm",
    "tanstack-start",
    "tRPC",
    "typescript"
  ],
  "scripts": {
    "build": "vinxi build",
    "check": "npx @biomejs/biome check --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:reset": "npx tsx app/db/reset.ts ",
    "db:seed:dev": "npx tsx app/db/seed.dev.ts ",
    "db:seed": "npx tsx app/db/seed.ts ",
    "db:studio": "drizzle-kit studio",
    "dev": "vinxi dev",
    "format": "npx @biomejs/biome format --write .",
    "lint": "npx @biomejs/biome lint --write .",
    "postinstall": "drizzle-kit push",
    "start": "node --env-file=.env ./node_modules/.bin/vinxi start",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "@tailwindcss/postcss": "^4.1.7",
    "@tanstack/match-sorter-utils": "^8.19.4",
    "@tanstack/react-form": "^1.11.3",
    "@tanstack/react-query": "^5.76.2",
    "@tanstack/react-query-devtools": "^5.76.2",
    "@tanstack/react-router": "^1.120.7",
    "@tanstack/react-router-with-query": "^1.120.7",
    "@tanstack/react-start": "^1.120.7",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/router-devtools": "^1.120.7",
    "@trpc/client": "^11.1.2",
    "@trpc/server": "^11.1.2",
    "@trpc/tanstack-react-query": "^11.1.2",
    "better-auth": "^1.2.8",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "drizzle-seed": "^0.3.1",
    "pg": "^8.16.0",
    "postcss": "^8.5.3",
    "react": "^19.1.0",
    "react-aria-components": "^1.9.0",
    "react-dom": "^19.1.0",
    "slugify": "^1.6.6",
    "superjson": "^2.2.2",
    "tailwind-merge": "^3.3.0",
    "vinxi": "^0.5.6",
    "zod": "^3.25.23"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@faker-js/faker": "^9.8.0",
    "@types/node": "^22.15.21",
    "@types/pg": "^8.15.2",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^4.5.0",
    "drizzle-kit": "^0.31.1",
    "tailwindcss": "^4.1.7",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss-react-aria-components": "^2.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
